    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "envalid": "^7.2.2",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "jest": "^27.5.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pm2": "^5.2.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "tslib": "^2.4.0",
